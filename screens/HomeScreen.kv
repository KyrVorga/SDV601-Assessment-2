<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        canvas:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                pos: self.pos
                size: self.size


        BoxLayout:
            size_hint_y: None
            height: 50
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Button:
                text: 'Logout'
                size_hint_x: None
                width: 100
                on_press: root.logout()

            Label:
                text: 'Home'
                font_size: 24
                size_hint_y: None
                height: 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        RV:
            size_hint: 1, 1

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_x: 0.7
            pos_hint: {'center_x': 0.5}

            Button:
                text: 'Open DES'
                size_hint: None, None
                size: 150, 40
                on_press: root.open_data_explorer()

            Button:
                text: 'Delete Instance'
                size_hint: None, None
                size: 150, 40

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_x: 0.7
            pos_hint: {'center_x': 0.5}

            TextInput:
                hint_text: 'Enter Join Code'
                multiline: False
                height: 40
                size_hint_y: None
                size_hint_x: 0.5

            Button:
                text: 'Submit'
                size_hint: None, None
                size: 100, 40
