<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        canvas:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Login'
            font_size: 24
            size_hint_y: None
            height: 50
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint_x: 0.7
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            TextInput:
                id: username_input
                hint_text: 'Username'
                multiline: False
                height: 40
                size_hint_y: None
                pos_hint: {'center_x': 0.5}

            TextInput:
                id: password_input
                hint_text: 'Password'
                multiline: False
                password: True
                height: 40
                size_hint_y: None
                pos_hint: {'center_x': 0.5}

            BoxLayout:
                size_hint_x: None
                width: 120
                pos_hint: {'center_x': 0.5}
                Button:
                    text: 'Login'
                    size_hint: None, None
                    size: 120, 40
                    on_press: root.login()
